<div id="wrapper" x-data="{ navOpen: false }" class="relative h-screen w-full overflow-x-hidden">
  <nav id="sidebar" class="fixed top-0 left-0 bottom-0 h-screen w-64 text-white bg-gray-900 shadow-xl" :class="{'nav-open': navOpen }">
    <div class="h-16 flex justify-center items-center bg-indigo-900">
      <h1 class="orbitron text-3xl text-center font-bold tracking-wider align-bottom">Novy</h1>
    </div>
    <div class="overflow-y-auto" style="height: calc(100vh - 64px)">
      <ul>
        <template x-data="{inc: 10}" x-for="i in inc">
          <li x-data="{ navOpen: false }">
            <a @click="navOpen = !navOpen" class="block px-5 pt-3 pb-4 hover:bg-gray-800" href="#">
              <svg class="h-6 w-6 inline-block mr-2" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1em" height="1em" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="white"/><rect x="0" y="0" fill="rgba(0, 0, 0, 0)" /></svg>
              <span class="tracking-wide align-bottom">Dashboard</span>
            </a>
            <ul x-show="navOpen">
              <template x-data="{inc2: 2}" x-for="i in inc2">
                <li class="hover:bg-gray-800">
                  <a class="block px-5 pt-3 pb-4" href="#">
                    <span class="ml-9 tracking-wide align-bottom">Dashboard Sub</span>
                  </a>
                </li>
              </template>
            </ul>
          </li>
        </template>
      </ul>
    </div>
    <%# <div @click="navOpen = !navOpen" class="h-16 flex justify-center items-center bg-indigo-900 cursor-pointer">
